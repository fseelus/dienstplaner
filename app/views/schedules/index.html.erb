<h1>Dienstplaner</h1>

  <table class="table">
    <thead>
      <th>Name</th>
      <th>Dienstplan</th>
    </thead>
    <tbody>
      <% unless @schedules.count == 0 %>
        <tr>
          <% @schedules.each do |schedule| %>
            <td><%= schedule.employee.full_name %></td>
            <td><%= link_to schedule.name, schedule_path(schedule) %></td>
            <td><%= link_to "bearbeiten", edit_schedule_path(schedule) %></td>
            <% end %>
        </tr>
      <% else %>
        <p>No schedules available</p>
      <% end %>
    </tbody>
  </table>
