<%= month_calendar events: @shifts, attribute: :startdate, end_attribute: :enddate do |date, shifts| %>
<div class="border border-secondary rounded" style="width: 140px; height: 140px;">
  <small class="mx-1"><%= l(date, format: :short) %></small>
    <% shifts.each do |shift| %>
      <div class="shift<%= shift.bgcolor_id %>">
        <%= link_to shift.name, shift_path(shift), class: "text-dark" %>
      </div>
   <% end %>
</div>
<% end %>
